# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Server Port
PORT=3000

# Admin Credentials
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password

# Postback Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
POSTBACK_SECRET=your_postback_secret_here

# Telegram Bot Configuration
TELEGRAM_USER_BOT_TOKEN=your_user_bot_token_from_botfather
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_from_botfather
TELEGRAM_ADMIN_CHAT_ID=your_telegram_chat_id

# Production Settings
NODE_ENV=production
ALLOWED_ORIGINS=https://nc-earnings-campaign-production.up.railway.app
